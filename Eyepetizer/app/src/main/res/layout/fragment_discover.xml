<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_hundred_eighty_dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_first"
            android:layout_width="@dimen/zero_dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/one_dp"
            android:layout_marginBottom="@dimen/one_dp"
            android:layout_height="@dimen/one_hundred_eighty_dp"/>
        <ImageView
            android:id="@+id/top_ic"
            android:layout_width="@dimen/zero_dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/one_dp"
            android:layout_marginBottom="@dimen/one_dp"
            android:layout_marginLeft="@dimen/one_dp"
            android:layout_height="@dimen/one_hundred_eighty_dp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/img_match"
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_hundred_eighty_dp"/>

    <com.eye.eyepetizer.until.EyeGridView
        android:id="@+id/grid_view"
        android:numColumns="auto_fit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    </LinearLayout>

    </ScrollView>
</LinearLayout>