<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">




    <ImageView
        android:id="@+id/iv_select_video"
        android:layout_width="match_parent"
        android:layout_height="@dimen/two_hundred_dp"
        android:src="@mipmap/ic_launcher"
        android:scaleType="fitXY"/>

    <RelativeLayout
        android:id="@+id/video_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/two_hundred_dp"
        android:background="#55000000">

        <TextView
            android:id="@+id/tv_video_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="90dp"
            android:text="测试"
            android:textColor="#fff"/>

        <TextView
            android:id="@+id/tv_video_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="135dp"
            android:layout_marginTop="120dp"
            android:text="测试"
            android:textColor="#fff"/>

        <TextView
            android:id="@+id/tv_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_video_category"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_video_category"
            android:text="/"
            android:textColor="#fff"/>

        <TextView
            android:id="@+id/tv_video_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_video_category"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_line"
            android:text="time"
            android:textColor="#fff"/>
    </RelativeLayout>
