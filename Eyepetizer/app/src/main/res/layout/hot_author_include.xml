<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical">


    <ImageView android:id="@+id/image_author_icon"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@mipmap/ic_launcher"

    />
    <TextView android:id="@+id/hot_author"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="5dp"
              android:layout_toRightOf="@+id/image_author_icon"
              android:text="野心"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignBottom="@+id/image_author_icon"
              android:layout_marginLeft="5dp"
              android:textSize="12sp"
              android:layout_toRightOf="@+id/image_author_icon"
              android:ellipsize="end"
              android:maxLines="1"
                android:id="@+id/description"
              android:text="最上瘾的旅行短视频,让平淡的生活撒点野."/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignBottom="@+id/hot_author"
              android:layout_marginLeft="20dp"
              android:layout_toRightOf="@+id/hot_author"
              android:id="@+id/video_number"
              android:text="3个视频"
              android:textSize="10sp"/>


</RelativeLayout>
