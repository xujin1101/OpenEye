<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/fifty_dp">

    <TextView
        android:id="@+id/title_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Eyepetizer"
        android:textStyle="italic|bold"/>
    <ImageView
        android:id="@+id/title_search_iv"
        android:layout_width="@dimen/fifty_dp"
        android:layout_height="@dimen/fifty_dp"
        android:src="@mipmap/ic_action_search"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="centerInside"
        android:background="@drawable/shape_title"
        />
    <ImageView
        android:id="@+id/title_more_iv"
        android:layout_width="@dimen/fifty_dp"
        android:layout_height="@dimen/fifty_dp"
        android:src="@mipmap/ic_menu_more"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/tv_line_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero_point_five_dp"
        android:text="sfsdfdsaf"
        android:layout_alignParentBottom="true"
        android:background="#000000"/>

</RelativeLayout>